{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "defaultMode": "acceptEdits",
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(secrets/**)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Bash(sudo *)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(dd *)",
      "Bash(mkfs*)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(rsync *)"
    ],
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Write(runs/**)",
      "Edit(runs/**)",
      "Write(/tmp/**)",
      "Write(*.md)",
      "Read(config/**)",
      "Task(setup-agent)",
      "Task(orchestrator-agent)",
      "Task(browser-agent)",
      "Task(search-agent)",
      "Task(scoring-agent)",
      "Task(extraction-agent)",
      "Bash(python3 scripts/safe_bash.py *)",
      "Bash(python3 scripts/log_event.py *)",
      "Bash(python3 scripts/validate_state.py *)",
      "Bash(python3 scripts/state_manager.py *)",
      "Bash(python3 scripts/budget_limiter.py *)",
      "Bash(python3 scripts/auto_permissions.py *)",
      "Bash(python3 scripts/pdf_security_validator.py *)",
      "Bash(python3 scripts/validation_gate.py *)",
      "Bash(python3 scripts/create_quote_library_with_citations.py *)",
      "Bash(python3 scripts/create_bibliography.py *)",
      "Bash(bash scripts/start_chrome_debug.sh *)",
      "Bash(bash scripts/cdp_health_check.sh *)",
      "Bash(bash scripts/create_run_structure.sh *)",
      "Bash(bash scripts/validate_agent_execution.sh *)",
      "Bash(bash scripts/launch_live_monitor.sh *)",
      "Bash(jq *)",
      "Bash(grep *)",
      "Bash(find runs/**)",
      "Bash(find scripts/**)",
      "Bash(mkdir -p runs/**)",
      "Bash(ls *)",
      "Bash(cat runs/**/*.json)",
      "Bash(cat runs/**/*.md)",
      "Bash(cat runs/**/*.txt)",
      "Bash(cat runs/**/*.log)",
      "Bash(stat *)",
      "Bash(date *)",
      "Bash(sleep *)",
      "Bash(wc *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(echo *)",
      "Bash(which *)",
      "Bash(curl -s http://localhost:9222/*)",
      "Bash(lsof *)",
      "Bash(mv runs/** runs/**)",
      "Bash(cp runs/** runs/**)",
      "Bash(test *)",
      "Bash([ *)",
      "Bash(kill *)",
      "Bash(ps *)"
    ],
    "ask": []
  }
}
