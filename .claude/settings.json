{
  "mcpServers": {
    "chrome": {
      "command": "/opt/homebrew/bin/npx",
      "args": [
        "-y",
        "@eddym06/custom-chrome-mcp@latest"
      ],
      "env": {
        "CHROME_PATH": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(venv/bin/python .claude/skills/research/scripts/config_loader.py --mode * --query *)",
      "Bash(venv/bin/python -m src.*)",
      "Bash(venv/bin/python -c *)",
      "Bash(python3 .claude/skills/research/scripts/config_loader.py --mode * --query *)",
      "Bash(python3 -m src.*)",
      "Bash(python3 -c *)",
      "Bash(pytest *)",
      "Bash(npx -y @eddym06/custom-chrome-mcp@latest --version)",
      "Bash(mkdir -p runs/*)",
      "Bash(mkdir -p logs)",
      "Bash(mkdir -p /tmp/*)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(cp *)",
      "Bash(rm *)",
      "Bash(echo *)",
      "Bash(grep * logs/* runs/*)",
      "Bash(tail * logs/* runs/*)",
      "Bash(head * runs/* logs/*)",
      "Bash(wc -l *)",
      "Bash(find src tests -name \"*.py\" *)",
      "Bash(curl -s http://localhost:8000/health)",
      "Bash(curl -s http://localhost:8000/*)",
      "Bash(venv/bin/python -m src.web_ui.server)",
      "Bash(nohup venv/bin/python -m src.web_ui.server *)",
      "Bash(open http://localhost:8000)",
      "Bash(source /tmp/*)",
      "Bash(jq *)",
      "Bash(export *)",
      "Bash(basename *)",
      "Bash(mkdir -p $RUN_DIR*)",
      "Bash(wc -w *)",
      "Bash(tr -d *)",
      "Bash(sed *)",
      "Bash(for *)",
      "Bash(if *)",
      "Bash(while *)",
      "Bash([ *)",
      "Bash([[ *)",
      "Bash(mkdir -p runs/*/pdfs)",
      "Bash(mkdir -p runs/*/metadata)",
      "Bash(mkdir -p runs/*/temp)",
      "Bash(ls -1 *)",
      "Bash(ls -lah *)",
      "Bash(mv *)"
    ],
    "additionalDirectories": [
      ".claude/skills/research",
      "runs",
      "logs",
      "tests",
      "/tmp"
    ]
  },
  "agents": {
    "linear_coordinator": {
      "model": "claude-sonnet-4-6",
      "max_tokens": 8192,
      "temperature": 0.3,
      "timeout_seconds": 3600,
      "description": "Haupt-Coordinator f\u00fcr v2.3+ Workflow (1h timeout f\u00fcr Standard/Deep Mode)"
    },
    "query_generator": {
      "model": "claude-haiku-4-5-20251001",
      "max_tokens": 2048,
      "temperature": 0.5,
      "timeout_seconds": 60,
      "description": "Generiert Boolean-Queries f\u00fcr API-Suche"
    },
    "discipline_classifier": {
      "model": "claude-haiku-4-5-20251001",
      "max_tokens": 1024,
      "temperature": 0.2,
      "timeout_seconds": 30,
      "description": "Detects academic discipline for DBIS database selection (v2.3+ with LLM)"
    },
    "llm_relevance_scorer": {
      "model": "claude-haiku-4-5-20251001",
      "max_tokens": 4096,
      "temperature": 0.2,
      "timeout_seconds": 120,
      "description": "LLM-gest\u00fctzte Relevanz-Bewertung f\u00fcr 5D-Scoring"
    },
    "quote_extractor": {
      "model": "claude-haiku-4-5-20251001",
      "max_tokens": 4096,
      "temperature": 0.1,
      "timeout_seconds": 180,
      "description": "Extrahiert pr\u00e4zise Zitate aus PDFs"
    },
    "dbis_browser": {
      "model": "claude-sonnet-4-6",
      "max_tokens": 8192,
      "temperature": 0.2,
      "timeout_seconds": 600,
      "description": "Browser automation f\u00fcr PDF-Downloads via DBIS institutional access"
    },
    "dbis_search": {
      "model": "claude-sonnet-4-6",
      "max_tokens": 8192,
      "temperature": 0.2,
      "timeout_seconds": 900,
      "description": "Browser automation for DBIS database search (v2.3+ with updated selectors)"
    }
  },
  "workflow": {
    "default_mode": "standard",
    "auto_resume_on_error": true,
    "checkpoint_interval_minutes": 5,
    "max_retries_per_phase": 3
  },
  "ui": {
    "show_progress_bars": true,
    "headful_browser": true,
    "log_level": "INFO",
    "output_format": "rich"
  },
  "api": {
    "rate_limit_strategy": "adaptive",
    "cache_enabled": true,
    "cache_ttl_hours": 24,
    "timeout_seconds": 30
  },
  "pdf": {
    "max_parallel_downloads": 3,
    "fallback_chain": [
      "unpaywall",
      "core",
      "dbis_browser"
    ],
    "dbis_browser_delay_seconds": 15,
    "skip_after_all_failed": true
  },
  "dbis_search": {
    "enabled": true,
    "max_databases_per_query": 3,
    "timeout_per_database": 60,
    "fallback_to_api_only": true,
    "source_annotation": true,
    "discipline_boost": 0.05
  },
  "scoring": {
    "relevance_weight": 0.4,
    "recency_weight": 0.2,
    "quality_weight": 0.2,
    "authority_weight": 0.2,
    "use_llm_relevance": true
  },
  "output": {
    "base_directory": "runs",
    "create_timestamp_folder": true,
    "citation_style": "apa7",
    "save_logs": true,
    "save_temp_files": true,
    "create_bibliography": true,
    "export_formats": [
      "json",
      "csv",
      "markdown",
      "bibtex"
    ]
  }
}